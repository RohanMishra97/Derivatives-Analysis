        <StackPanel  x:Name="iconNav"  Orientation="Horizontal" HorizontalAlignment="Left" Height="64" Margin="711,0,0,0" VerticalAlignment="Top" Width="521">
            <Button x:Name="BtnIcon" BorderThickness="0"  Background="Transparent" Foreground="White" Content="{materialDesign:PackIcon ChartLine}" Width="60"
       Margin="0,3"
       />
            <Button x:Name="BtnIcon7" BorderThickness="0"  Background="Transparent" Foreground="White" Content="{materialDesign:PackIcon ChartGantt}" Width="60"
       />
            <Button x:Name="BtnIcon9" BorderThickness="0"  Background="Transparent" Foreground="White" Content="{materialDesign:PackIcon charttimelinevariant}" Width="60"
       Margin="0,12,0,11"
       />
            <Button x:Name="BtnIcon6" BorderThickness="0"  Background="Transparent" Foreground="White" Content="{materialDesign:PackIcon EmailMarkAsUnread}" Width="60"
       Margin="0,16"
       />
            <Button x:Name="BtnIcon2" BorderThickness="0"  Background="Transparent" Foreground="White" Content="{materialDesign:PackIcon bell}"
       />
            <Button x:Name="BtnIcon3" BorderThickness="0"  Background="Transparent" Foreground="White" Content="{materialDesign:PackIcon flag}"
       />
            <Button x:Name="BtnIcon4" BorderThickness="0"  Background="Transparent" Foreground="White" Content="{materialDesign:PackIcon faceprofile}"
       />
            <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Height="18" TextWrapping="Wrap" Text="Harish Menon" VerticalAlignment="Center" Width="92"/>
            <Button x:Name="BtnIcon5" BorderThickness="0"  Background="Transparent" Foreground="White" Content="{materialDesign:PackIcon settingsoutline}" Height="Auto"
       />
        </StackPanel>
        <Grid x:Name="nonMenu" HorizontalAlignment="Left" Height="502" Margin="208,108,0,0" 
              VerticalAlignment="Top" Width="1024" Visibility="Hidden">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="12*"/>
            </Grid.RowDefinitions>
            <Canvas x:Name="menuForOptions" Grid.Column="0" Grid.Row="0" >
                <TextBox x:Name="searchOption" Height="27" Canvas.Left="24" TextWrapping="Wrap" Text="" 
                     Canvas.Top="30" Width="80" TextChanged="searchOption_TextChanged" />
                <ComboBox x:Name="dropStrikePrice" Canvas.Left="280" Canvas.Top="35" Width="100" Height="22" FontFamily="Verdana" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <ComboBox x:Name="comboBox" Grid.Column="1" 
                      Width="100" Height="22"  Canvas.Left="150" Canvas.Top="35">
                    <ComboBoxItem Content="9/26/2019" HorizontalAlignment="Left" Width="95" />
                    <ComboBoxItem Content="10/31/2019" HorizontalAlignment="Left" Width="95" />
                    <ComboBoxItem Content="11/28/2019" HorizontalAlignment="Left" Width="95" />
                </ComboBox>
                <Label x:Name="label" Content="Search" Canvas.Left="24" Height="24" RenderTransformOrigin="0.675,0.625" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Verdana" Canvas.Top="6"/>
                <Label x:Name="label1" Content="ExpDate" Canvas.Left="150" Canvas.Top="5"/>
                <Label x:Name="label2" Content="Strike Price" Canvas.Left="280" Canvas.Top="5"/>
            </Canvas>
            <DataGrid x:Name="dataGridOptions" HorizontalAlignment="Left" Margin="10,10,0,0" 
                  VerticalAlignment="Top"
                  Height="500" Width="auto"   Grid.Column="0" Grid.Row="1" SelectionChanged="dataGridOptions_SelectionChanged_1" >
                <DataGrid.Columns>
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="SELECT"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button x:Name="addBtn" Cursor="Arrow" >+</Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="id" Width="90"  Binding="{Binding option_id}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Symbol" Width="100" Binding="{Binding symbol}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Expiry" Width="90"  Binding="{Binding expiry_date}"></DataGridTextColumn>
                    <DataGridTextColumn Header="LTP" Width="90"  Binding="{Binding ltp}"></DataGridTextColumn>
                    <DataGridTextColumn Header="oi" Width="100" Binding="{Binding oi}"></DataGridTextColumn>
                    <DataGridTextColumn Header="oi_change" Width="90"  Binding="{Binding oi_change}"></DataGridTextColumn>
                    <DataGridTextColumn Header="volume" Width="100" Binding="{Binding volume}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Type" Width="100" Binding="{Binding op_type}"></DataGridTextColumn>
                    <DataGridTextColumn Header="p_change" Width="90"  Binding="{Binding p_change}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Strike Price" Width="100" Binding="{Binding strike_price}"></DataGridTextColumn>
                    <DataGridTextColumn Header="iv" Width="100" Binding="{Binding iv}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Canvas x:Name="menuForFutures"    Grid.Row="0" Grid.Column="0" Visibility="Hidden">
                <TextBox x:Name="searchFuture" Height="27" Canvas.Left="24" TextWrapping="Wrap" Text="" 
                     Canvas.Top="30" Width="80" TextChanged="searchFuture_TextChanged"/>
                <ComboBox x:Name="expDateFut" Grid.Column="1" 
                      Width="100" Height="22"  Canvas.Left="150" Canvas.Top="35">
                    <ComboBoxItem Content="ComboBoxItem" HorizontalAlignment="Left" Width="95" />
                </ComboBox>

                <Label x:Name="labelSearchFut" Content="Search" Canvas.Left="24" Height="24" RenderTransformOrigin="0.675,0.625" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Verdana" Canvas.Top="6"/>
                <Label x:Name="labelExpDate" Content="ExpDate" Canvas.Left="150" Canvas.Top="5"/>
            </Canvas>
            <DataGrid x:Name="dataGridFutures"  HorizontalAlignment="Left" Grid.Column="0" Grid.Row="1" Margin="10,10,0,0"
                  Visibility="Hidden" Height="500" SelectionChanged="dataGridFuturess_SelectionChanged_1">
                <DataGrid.Columns>
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="SELECT"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button x:Name="addBtn" Cursor="Arrow" >+</Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="id" Width="90"  Binding="{Binding future_id}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Symbol" Width="100" Binding="{Binding symbol}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Expiry" Width="90"  Binding="{Binding expiry_date}"></DataGridTextColumn>
                    <DataGridTextColumn Header="LTP" Width="90"  Binding="{Binding ltp}"></DataGridTextColumn>
                    <DataGridTextColumn Header="oi" Width="100" Binding="{Binding oi}"></DataGridTextColumn>
                    <DataGridTextColumn Header="oi_change" Width="90"  Binding="{Binding oi_change}"></DataGridTextColumn>
                    <DataGridTextColumn Header="volume" Width="100" Binding="{Binding volume}"></DataGridTextColumn>
                    <DataGridTextColumn Header="VWAP" Width="100" Binding="{Binding vwap}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Canvas x:Name="workSpaceTitle" Grid.Column="1" Grid.Row="0">
                <TextBlock x:Name="titleStrategies" HorizontalAlignment="Left" Margin="33,12,0,-2" TextWrapping="Wrap" Text="STRATEGIES" 
                           VerticalAlignment="Top" FontFamily="Verdana" FontWeight="Bold" Foreground="#f1f1f1" Height="20"/>
                <Button x:Name="button2" Content="+ ADD STRATEGY" HorizontalAlignment="Left" Margin="318,11,-163,-1" VerticalAlignment="Top"
                                Width="127" FontFamily="Verdana" FontSize="10" Height="20"/>
            </Canvas>
            <Grid x:Name="workspace" Grid.Column="1" Grid.Row="1"  Margin="28,10,-149,10">




                <TreeView x:Name="strategyTree">
                    <TreeView.Resources>
                        <HierarchicalDataTemplate DataType="{x:Type self:Strategy}" ItemsSource="{Binding Members}">
                            <StackPanel Orientation="Horizontal">

                                <TextBlock Text="{Binding Name}"  />
                                <TextBlock Text="{Binding Dt}"  />
                                <TextBlock Text=" [" Foreground="Gray" />
                                <TextBlock Text="{Binding Members.Count}" Foreground="Gray" />
                                <TextBlock Text="]" Foreground="Gray" />
                                <TextBlock Text="Analyse" Background="#999"/>
                            </StackPanel>
                        </HierarchicalDataTemplate>
                        <DataTemplate DataType="{x:Type self:StrategyMember}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Name}"  />
                                <TextBlock Text=" (" Foreground="Green" />
                                <TextBlock Text="{Binding Age}"  />
                                <TextBlock Text=" years)" Foreground="Green" />
                            </StackPanel>
                        </DataTemplate>
                    </TreeView.Resources>
                </TreeView>


            </Grid>
        </Grid>
        

