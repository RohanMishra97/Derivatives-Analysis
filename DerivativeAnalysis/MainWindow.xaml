        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
     TextElement.Foreground="{DynamicResource MaterialDesignBody}"
     TextElement.FontWeight="Regular"
     TextElement.FontSize="13"
     TextOptions.TextFormattingMode="Ideal"
     TextOptions.TextRenderingMode="Auto"
     Background="{DynamicResource MaterialDesignPaper}"
     FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid Background="#FF343540">
        <StackPanel x:Name="MenuOptions" Orientation="Vertical"  HorizontalAlignment="Left" Height="195" Margin="1,75,0,0" VerticalAlignment="Top" Width="158">
            <Button Style="{StaticResource MaterialDesignFlatButton}" ToolTip="MaterialDesignFlatButton"
                    Content="Positions" Foreground="White" FontSize="15"/>
            <Button x:Name="DashboardButton" Style="{StaticResource MaterialDesignFlatButton}" ToolTip="MaterialDesignFlatButton" 
                    Content="Dashboard" Foreground="White" FontSize="15" Background="#FF43444F" Click="DashboardButton_Click"/>
            <Button x:Name="FutureButton" Style="{StaticResource MaterialDesignFlatButton}" ToolTip="MaterialDesignFlatButton" 
                    Content="Futures" Foreground="White" FontSize="15" Click="FutureButton_Click" />
            <Button x:Name="OptionButton" Style="{StaticResource MaterialDesignFlatButton}" ToolTip="MaterialDesignFlatButton" 
                    Content="Options" Foreground="White" FontSize="15" Click="OptionButton_Click" />
            <Button Style="{StaticResource MaterialDesignFlatButton}" ToolTip="MaterialDesignFlatButton" 
                    Content="Blog" Foreground="White" FontSize="15"/>
            <Button Style="{StaticResource MaterialDesignFlatButton}" ToolTip="MaterialDesignFlatButton" Content="Team" Foreground="White" FontSize="15"/>
            <!--<Label x:Name="label" Content="Live Market Quotes" HorizontalAlignment="Left" Height="50" Margin="25,0,0,0" Width="166" VerticalAlignment="Top" FontFamily="Aharoni"/>-->


        </StackPanel>

        <DataGrid Name="liveTicker" HorizontalAlignment="Left" Margin="0,281,0,0"
    AutoGenerateColumns="False" VerticalAlignment="Top" Height="252" Width="208"  HorizontalScrollBarVisibility="Hidden"
    VerticalScrollBarVisibility="Hidden" AlternationCount="2"  AlternatingRowBackground="#FF43444F" Background="#FF343540">
            <DataGrid.Columns >
                <DataGridTextColumn Header="Stock" Width="90"  Binding="{Binding symbol}"></DataGridTextColumn>
                <DataGridTextColumn Header="Quote" Width="100" Binding="{Binding value}"></DataGridTextColumn>
            </DataGrid.Columns>

        </DataGrid>
